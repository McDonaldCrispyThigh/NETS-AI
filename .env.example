# ==========================================
# AI-BDD Environment Variables
# ==========================================
# Copy this file to .env and fill in your API keys

# === REQUIRED API Keys ===
OPENAI_API_KEY=sk-your_openai_api_key_here
GOOGLE_MAPS_API_KEY=AIza_your_google_maps_key_here

# === OPTIONAL Enhanced Data Collection ===
# Outscraper (Enhanced Google Maps data - full review history, 97% cheaper)
# Sign up: https://outscraper.com/
OUTSCRAPER_API_KEY=your_outscraper_key_here

# LinkedIn Scraper (Employee validation - requires LinkedIn credentials)
# WARNING: Automated scraping may violate LinkedIn ToS
# Use only for academic research with proper disclosure
LINKEDIN_EMAIL=your_linkedin_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# Yelp Fusion API (Restaurant reviews - FREE 5000 calls/day)
# Sign up: https://www.yelp.com/developers
YELP_API_KEY=your_yelp_api_key_here

# === Project Settings ===
DATA_PATH=./data
LOG_LEVEL=INFO
CACHE_ENABLED=True

# === Analysis Parameters ===
TARGET_CITY=Minneapolis
VALIDATION_YEAR=2023
SAMPLE_SIZE=1000
