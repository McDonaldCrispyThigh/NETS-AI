# ==========================================
# AI-BDD Environment Configuration
# ==========================================
# Copy this file to .env and fill in your API keys
# DO NOT commit .env to version control

# ========== REQUIRED API KEYS ==========
# OpenAI API Key (for GPT-4o-mini analysis)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_key_here

# Google Maps API Key (for place search and details)
# Get from: https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# Yelp Fusion API Key (optional)
YELP_API_KEY=your_yelp_key_here

# ========== OPTIONAL SETTINGS ==========
# Target city for data collection
TARGET_CITY=Minneapolis

# Data storage path
DATA_PATH=./data

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Cache API responses to save costs (True/False)
CACHE_ENABLED=True
